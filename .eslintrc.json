{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:shared:config",
                  "type:shared:http",
                  "type:shared:master-data",
                  "type:shared:security",
                  "type:shared:ui-messaging"
                ]
              },
              {
                "sourceTag": "domain:bookings",
                "onlyDependOnLibsWithTags": ["domain:bookings", "domain:shared"]
              },
              {
                "sourceTag": "domain:customers",
                "onlyDependOnLibsWithTags": [
                  "domain:customers",
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "domain:diary",
                "onlyDependOnLibsWithTags": ["domain:diary", "domain:shared"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:data",
                  "type:ui",
                  "type:model",
                  "type:shared:form",
                  "type:shared:config",
                  "type:shared:master-data",
                  "type:shared:security",
                  "type:shared:ui-messaging"
                ]
              },
              {
                "sourceTag": "type:data",
                "onlyDependOnLibsWithTags": [
                  "type:model",
                  "type:shared:config",
                  "type:shared:ui-messaging"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:model",
                  "type:shared:form",
                  "type:shared:ui"
                ]
              },
              { "sourceTag": "ui", "bannedExternalImports": ["@ngrx/**"] },
              {
                "sourceTag": "type:shared:http",
                "onlyDependOnLibsWithTags": [
                  "type:shared:config",
                  "type:shared:ui-messaging"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
